<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geonho.retorfitkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/diaryicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".controllers.activities.SplashActivity"
            android:theme="@style/NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.activities.LoginActivity"
            android:label="@string/login_activity" />
        <activity
            android:name=".controllers.activities.RegisterActivity"
            android:label="@string/register_activity" />
        <activity
            android:name=".controllers.activities.WriteActivity"
            android:label="@string/write_activity" />
        <activity
            android:name=".controllers.activities.DetailActivity"
            android:label="@string/detail_activity" />
        <activity
            android:name=".controllers.activities.PrefEditActivity"
            android:label="@string/prefedit_activity" />
        <activity
            android:name=".controllers.activities.UpdateActivity"
            android:label="@string/update_activity" />
        <activity
            android:name=".controllers.activities.UserActivity"
            android:label="@string/user_activity" />
        <activity
            android:name=".controllers.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>