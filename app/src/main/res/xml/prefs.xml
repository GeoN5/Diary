        android:title="사용자 설정">

        <Preference
            android:key="userService"
            android:title="사용자 계정 서비스"
            android:summary="사용자 계정 정보 수정 및 탈퇴">
        <intent
            android:targetClass="com.example.geonho.retorfitkotlin.controllers.activities.UserActivity"
            android:targetPackage="com.example.geonho.retorfitkotlin" />
