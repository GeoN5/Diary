<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.activities.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="360">
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:textSize="25sp"
        android:text="@string/write_title"
        android:textColor="@android:color/black"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center|left"
        android:text="@string/day"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        android:layout_weight="2"/>
    <TextView
        android:id="@+id/contentText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:scrollbars="vertical"
        android:lines="20"
        android:text="@string/write_content"
        android:gravity="top|left"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/updateFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_border_color_black_24dp"
        android:elevation="5dp"
        tools:ignore="RtlHardcoded" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deleteFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:elevation="5dp"
        tools:ignore="RtlHardcoded" />
</FrameLayout>